<div>
	<% if current_user.user_profile.logo_url.present? %>
		<%= image_tag current_user.user_profile.logo_url(:thumb) %>
	<% end %>
	<span style="font-size:24px;line-height:28px;"><%= @user.company_name %></span>
</div>

<div style="margin-top:20px;">
	<span <%= @employee.full_name %><br>
	<%= "#{@payroll.start_date.strftime('%-m/%-d/%Y')} - #{@payroll.end_date.strftime('%-m/%-d/%Y')}" %>
</div>
