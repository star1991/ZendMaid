<div class="container">
<div class="row-fluid">
<div class="span4 offset4">

<div class="content-box">

<div class="content-box-header">
	<i class="icon-question-sign"></i> Forgot your password?
</div>

<div class="row-fluid">
<div class="span12 center padded">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>


  Email <%= f.email_field :email, :autofocus => true, :style => "margin-left:10px;"%>


  <div><%= f.submit "Send me reset password instructions" , :class => "btn btn-green btn-large"%></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>

</div>
</div>
</div>
</div>
