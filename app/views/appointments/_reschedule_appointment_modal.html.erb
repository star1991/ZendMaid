<div class="modal fade hide" id="reschedule-appointment-modal">
<div class="modal-dialog">
	<div class="modal-header">
    	<h4 class="modal-title">Reschedule Appointment To...</h4>
    </div>
	<div class="modal-content padded">
			<%= form_tag "appointments-change-form", :class => "uni form-horizontal" do %>
			
			<div class="control-group date_picker required compact-horizontal">
				<label class="date_picker required control-label" for="subscription_appointments_attributes_0_start_time_date"><abbr title="required">*</abbr> Date</label>
				<div class="controls">
					<input class="date_picker required" id="reschedule_date" readonly="readonly" size="30" style="width: 105px" type="text">
					<input class="reschedule_date-alt" type="hidden">
				</div>
			</div>
			
			<div class="control-group string compact-horizontal inline">
				<label class="string required control-label">
				<abbr title="required">*</abbr> From</label>
				<div class="controls">
					<input class="string required timepicker" id="reschedule_from" size="50" style="width: 100px" type="text">
				</div>
			</div>
			
			<div class="control-group string required compact-horizontal inline">
				<label class="string required control-label">
				<abbr title="required">*</abbr> To</label>
				<div class="controls">
					<input class="string required timepicker" id="reschedule_to" size="50" style="width: 100px" type="text">
				</div>
			</div><br>			
			
			<div id="reschedule_toggle-recurring">
				<strong>Apply change to</strong>
				<div style="margin-left:20px;margin-top:5px;">
					<input type="radio" name="apply_to_subscription" id="only-this" value="false">Only this appointment<br>
					<input type="radio" name="apply_to_subscription" id="all-future" value="true">This and all future appointments in this series
				</div>
			</div>
			
    		<div class="row-fluid">
    			<div class="pull-right">
    				<%= link_to "Save", '#', :class => "btn btn-blue", :id => "reschedule-save" %>
    				<%= link_to "Cancel", "#", :class => "btn btn-danger", :id => "reschedule-cancel" %>
    			</div>
    		</div>
    		
    	<% end %>
    </div>
</div>
</div>
