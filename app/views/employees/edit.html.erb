<% provide(:title, "Edit Employee Information") %>
<% provide(:icon, "icon-edit") %>



<div class="container">
<div class="row-fluid">
    <div class="span12">


	<%= simple_form_for @employee, :html => { :class => "form-horizontal" } do |f| %>


	<div class="content-box">
  	<div class="content-box-header">
    	<i class="icon-edit"></i> <%= @employee.full_name %> - Edit
  	</div>

  	<div class="row-fluid">

      	<div class="span7 offset2 padded">

			<% if !@employee.active? %>
				<div class="alert alert-error">
					This employee is inactive
					<%= link_to 'Reactivate', reactivate_employee_path(@employee), :class => "btn btn-success btn-small", :style => "margin-left:30px;", :data => {:confirm => "Are you sure you want to reactivate this employee?" } %>
				</div>
			<% end %>

			<%= render 'shared/flash_notice' %>
 
            <%= render 'employees/employee_fields', :f => f %>
            <%= render 'employees/employee_details_fields', :f => f %>

			<h6 class="bottom-bordered"> Add primary address (optional) </h6>

            <%= f.simple_fields_for :address, :defaults => {:required => false} do |address_form| %>
            	<%= render 'addresses/address_fields', :f => address_form %>
            <% end %>
       		
       		<br>
			<div class="pull-right">
					
                	<%= f.button :submit, 'Save Changes', :class => "btn btn-green" %>
                	<%= link_to 'Cancel', @employee, :class => "btn btn-inverse" %>
            </div>
			</div>
	</div>	
	</div>

	<% end %>

	</div>
</div>
</div>

