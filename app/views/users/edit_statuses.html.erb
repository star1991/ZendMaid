<% provide(:title, "Statuses") %>
<% provide(:icon, "icon-cogs") %>

<div class="container">

<%= simple_form_for @user, :url => registration_path(resource_name), :html => { :class => "form-horizontal uni" }, :defaults => {:required => false} do |f| %>

<%= hidden_field_tag "edit_statuses" %>

<div class="row-fluid">
	<div class="span12">
    	
  	<div class="content-box">

	<div class="row-fluid">
		<div class="span12" style="padding-left:10px;padding-right:10px;padding-top:10px;background-color:whitesmoke;border-bottom:1px solid #e8e8e8;">
			<%= render 'users/settings_nav', :active => "Statuses" %>
		</div>
	</div>		

  	<div class="row-fluid">
		<%= render 'shared/content_box_help', :message => 
		"
		This page is where you can create and edit statuses. Statuses can be used to help you better organize your schedule and change the way that ZenMaid reacts to your appointments. Here is the behavior you can customize using statuses. <br>
		<ul>
			<li>Set whether an appointment can trigger a scheduling conflict</li>
			<li>Set whether email reminders and follow-ups are sent for an appointment</li>
			<li>Set whether or not an appointment is included in payroll reports</li>
			<li>Set whether an appointment is visible by default on your calendar</li>
			<li>Set whether an appointment is included in work orders and schedules sent to your cleaners</li>
		</ul><br>
		<em class='red'>Note: If you want to delete a status, please email us at #{mail_to 'arun@zenmaid.com'}</em>	
		" 
		%>
	</div>
	
  	<div class="row-fluid">		
		<div class="span12">
		<div class="padded">
		
		<%= render 'shared/flash_notice' %>		

		<div id="status-fields" class="custom-fields">		
			<%= f.simple_fields_for :statuses, @user.statuses do |status_builder| %>
				<%= render 'status_fields', :f => status_builder %>
			<% end %>

			<div class="links" style="margin-bottom: 10px;">
				<%= link_to_add_association '<i class="icon-plus"></i> Add Status'.html_safe, f, :statuses, :class => "btn btn-info" %>
			</div>
		</div>
		
		</div>
		</div>
	</div>


	<div class="row-fluid">
		<div class="span12">
		<div class="padded">
    		<div class="control-group">
     			<div class="controls">
     				<%= f.button :submit, "Save Changes" , :class => "btn btn-green pull-right" %>
        		</div>
     		</div>

		</div>
		</div>
	</div>

	</div>
	</div>
</div>


<% end %>

</div>