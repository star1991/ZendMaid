<% provide(:title, "Instant Booking Fields") %>
<% provide(:icon, "icon-cogs") %>

<div class="container">

<%= render 'shared/flash_notice' %>

<%= simple_form_for @user, :url => registration_path(resource_name), :html => { :class => "form-horizontal uni" }, :defaults => {:required => false} do |f| %>

<%= hidden_field_tag "instant_booking_fields_page" %>

<div class="row-fluid">
	<div class="span12">
    	
  	<div class="content-box">
  	<div class="content-box-header">
    	<i class="icon-cog"></i> Instant Booking Fields
  	</div>

 	<div class="row-fluid">		
		<div class="span12">
		<div class="padded">
		
		<h4 class="bottom-bordered"> Service Types </h4>
		<div class="info-box">
			<i class="icon-large icon-info-sign blue"></i> This is where you designate service types which show up in the system
		</div>
		

		<div id="customer-fields" class="custom-fields">
   	
			<%= f.simple_fields_for :service_types, @user.service_types do |service_type_builder| %>
				<%= render 'service_type_fields', :f => service_type_builder %>
			<% end %>
	
			<div class="links" style="margin-bottom: 10px;">
				<%= link_to_add_association '<i class="icon-plus"></i> Add Service'.html_safe, f, :service_types, :partial => "service_type_fields", :class => "btn btn-info" %>
			</div>
		</div>


		
		</div>
		</div>
	</div>

  	<div class="row-fluid">		
		<div class="span12">
		<div class="padded">
		
		<h4 class="bottom-bordered"> Instant Booking Fields </h4>
		<div class="info-box">
			<i class="icon-large icon-info-sign blue"></i> This is where you designate custom data entry fields that can be filled out for your booking form (drag to reorder)
		</div>
		

		<div id="customer-fields" class="custom-fields">
   	
			<%= f.simple_fields_for :instant_booking_fields, @user.instant_booking_fields do |instant_booking_field_builder| %>
				<%= render 'instant_booking_field_fields', :f => instant_booking_field_builder %>
			<% end %>
	
			<div class="links" style="margin-bottom: 10px;">
				<%= link_to_add_association '<i class="icon-plus"></i> Add Field'.html_safe, f, :instant_booking_fields, :partial => "instant_booking_field_fields", :class => "btn btn-info" %>
			</div>
		</div>


		
		</div>
		</div>
	</div>


	<div class="row-fluid">
		<div class="span12">
		<div class="padded">
    		<div class="control-group">
     			<div class="controls">
     				<%= f.button :submit, "Save Changes" , :class => "btn btn-green pull-right" %>
        		</div>
     		</div>

		</div>
		</div>
	</div>

	</div>
	</div>
</div>


<% end %>

</div>