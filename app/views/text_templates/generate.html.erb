<% provide(:title, "Preview #{@text_template.template_type}") %>
<% provide(:icon, "icon-thumbs-up") %>

<%= simple_form_for :generated_text, :url => send_generated_text_path(:appointment_id => @appointment.id), :defaults => {:required => false}, :method => :post, :html => {:class => "form-vertical"} do |f| %>

<div class="container">

<div class="row-fluid">
	<div class="span12">
    	
  	<div class="content-box">
  	<div class="content-box-header">
    	<i class="icon-phone-sign"></i> <%= @text_template.template_type %> Text
  	</div>
	

	<div class="row-fluid">
		<div class="span12 padded">
			<%= f.hidden_field :template_type, :value => @text_template.template_type %>
			
    		<%= f.input :body, :label => "Text", :as => :text, :input_html => {:value => @body, :rows => 4, :maxlength => 160 } %>
			
			<%= render 'recipients_list', :f => f %>

			<div class="pull-right">
				<% if @with_number.size == 0 %>
					<em class="red" style="margin-right:20px;"> No valid recipients available for this text </em> 
				<% else %>
        			<%= f.button :submit, "Send Text", :class => "btn btn-green"%>
				<% end %>
        		<%= link_to "Back", :back, :class => "btn btn-inverse" %>
     		</div>
     	</div>
	</div>


	</div>
	
	</div><!-- End row -->
</div>
</div>

<% end %>
