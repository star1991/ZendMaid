<!DOCTYPE html>
<html>
	<head>
  		<title><%= full_title(yield(:title), no_full = true) %></title>
  		<%= stylesheet_link_tag    "application-landing", :media => "all" %>
  		<%= stylesheet_link_tag embedded_assets_path(:id => @user.instant_booking_profile.id), :media => "all" %>
  		<%= include_gon %>
  		<%= javascript_include_tag "application-landing" %>
  		<%= csrf_meta_tags %>
  		<%= render 'layouts/shim' %>
  		<%= render 'shared/ga' if Rails.env.production? %>
  		<link href='//fonts.googleapis.com/css?family=Patua+One' rel='stylesheet' type='text/css'>
  		<% @user.instant_booking_profile.font_urls.each do |font_url| %>
  			<link href=<%= font_url %> rel='stylesheet' type='text/css'>
  		<% end %>
  		

	</head>
	<body style="background-color:transparent">
		<div class="main-wrapper">
		
		<div class="container-fluid">
		<%= yield %>
		</div>
		
		<div class="container">
			<%= debug(params) if Rails.env.development? %>
		</div>
		</div>
		
	</body>
</html>
