<!DOCTYPE html>
<html>
	<head>
  		<title><%= full_title(yield(:title), no_full = true) %></title>
  		<%= stylesheet_link_tag    "application-landing", :media => "all" %>
  		<%= javascript_include_tag "application-landing" %>
  		<%= csrf_meta_tags %>
  		<%= render 'layouts/shim' %>
  		<%= render 'shared/ga' if Rails.env.production? %>
  		<link href='http://fonts.googleapis.com/css?family=Patua+One' rel='stylesheet' type='text/css'>
	</head>
	<body>
		<div class="main-wrapper">

		<%= render 'layouts/header-landing' %>
		<%= render 'layouts/banner-title' %>

		<div class="container">
			<% flash.each do |name, msg| %>
				<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      			<a class="close" data-dismiss="alert">&#215;</a>
      			<%= content_tag :div, msg, :id => "flash_#{name}" %>
    			</div>
			<% end %>
		</div>

		<div class="container">
		<%= yield %>
		</div>

		<%= render 'layouts/footer-landing' %>

		<div class="container">
			<%= debug(params) if Rails.env.development? %>
		</div>
		</div>

	</body>
</html>
