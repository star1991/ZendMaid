<% provide(:title, "Booking") %>
<% provide(:icon, "icon-cogs") %>

<div class="container">

<div class="row-fluid">
	<div class="span12">
    	
  	<div class="content-box">

	<div class="row-fluid">
		<div class="span12" style="padding-left:10px;padding-right:10px;padding-top:10px;background-color:whitesmoke;border-bottom:1px solid #e8e8e8;">
			<%= render 'users/settings_nav', :active => "Instant Booking" %>
		</div>
	</div>		

  	<div class="row-fluid">
		<%= render 'shared/content_box_help', :message => "This is where you can edit the appearance and information on your booking form" %>
	</div>

  	<div class="row-fluid">		
		<div class="padded">
		
		<% if current_user.booking_form_started? %>

		<%= render 'shared/flash_notice' %>	
		
		<div class="span2"></div>
		<div class="span7">

		<%= simple_form_for @instant_booking_profile, :html => { :class => "form-horizontal uni" }, :defaults => {:required => false} do |f| %>

		<%= render 'instant_booking_profile_fields', :f => f %>
		<div class="control-group">
     		<div class="controls">
     			<%= f.button :submit, "Save Changes" , :class => "btn btn-green pull-right" %>
        	</div>
     	</div>
     		
     	<% end %>
     	
     	</div>
     	<div class="span3"></div>

     	<% else %>

     		<%= render 'instant_bookings/instant_bookings_pitch' %>


     	<% end %>

		</div>
	</div>
	
	</div>
	</div>
</div>
			

